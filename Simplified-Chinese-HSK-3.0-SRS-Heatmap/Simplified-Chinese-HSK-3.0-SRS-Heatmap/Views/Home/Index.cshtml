@{
    ViewData["Title"] = "Home Page";
}

@{
    int counter = 0;
    int currentHsk = 1;
    int modelLength = Model.Count;

    // Loop through all 9 levels and create sections/subsections for each.
    while (currentHsk <= 9)
    {
        string hsk = "HSK" + currentHsk;
        <div class="mt-5">
            <h1 class="text-center">HSK @currentHsk</h1>
            <div class="row">
                <div class="col-md-6">
                    <h1 class="text-center">Characters</h1>
                    <div class="grid">
                        @{
                            // Loop through and create character section.
                            while (counter < modelLength && Model[counter].Level == hsk && Model[counter].Type == "Characters")
                            {
                                <div style="background-color: @Model[counter].Color;">@Model[counter].Character</div>
                                counter = counter + 1;
                            }
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <h1 class="text-center">Vocabulary</h1>
                    <div class="grid">
                        @{
                            // Loop through and create vocabulary section.
                            while (counter < modelLength && Model[counter].Level == hsk && Model[counter].Type == "Vocabulary")
                            {
                                <div style="background-color: @Model[counter].Color;">@Model[counter].Character</div>
                                counter = counter + 1;
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        currentHsk = currentHsk + 1;
    }
}